{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      },
      "jsx": "preserve",
      "esModuleInterop": true,
      "lib": ["dom", "esnext"],
      "types": ["vite/client", "vuetify"]
    },
    "include": ["src/**/*.vue", "src/**/*.js"],
    "exclude": ["node_modules", "dist"]
  }
  